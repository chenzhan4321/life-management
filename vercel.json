{
  "version": 2,
  "builds": [
    {
      "src": "src/api/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "src/frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/src/frontend/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/src/api/main.py"
    },
    {
      "src": "/",
      "dest": "/src/frontend/templates/index.html"
    }
  ],
  "env": {
    "DEEPSEEK_API_KEY": "@deepseek-api-key"
  }
}