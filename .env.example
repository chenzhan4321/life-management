# macOS 生活管理系统 - 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# ================================
# 应用基础配置
# ================================
# 应用名称
APP_NAME="macOS Life Management System"

# 应用版本
APP_VERSION="1.0.0"

# 运行环境 (development, production, testing)
ENVIRONMENT="development"

# 调试模式 (true/false)
DEBUG="true"

# 应用密钥 (用于签名和加密，生产环境请更改)
SECRET_KEY="your-super-secret-key-change-this-in-production"

# ================================
# 服务器配置
# ================================
# 服务器主机地址
HOST="127.0.0.1"

# 服务器端口
PORT="8000"

# 工作进程数 (生产环境建议设为 CPU 核心数)
WORKERS="1"

# 请求超时时间 (秒)
TIMEOUT="60"

# ================================
# 数据库配置
# ================================
# 数据库 URL
DATABASE_URL="sqlite:///./data/database/life_management.db"

# 数据库连接池大小
DB_POOL_SIZE="10"

# 数据库连接超时 (秒)
DB_TIMEOUT="30"

# 是否启用数据库查询日志
DB_ECHO="false"

# ================================
# macOS 集成配置
# ================================
# 是否启用 macOS 系统集成
MACOS_INTEGRATION_ENABLED="true"

# 是否启用日历同步
CALENDAR_SYNC_ENABLED="false"

# 日历同步间隔 (秒)
CALENDAR_SYNC_INTERVAL="300"

# 是否启用提醒事项同步
REMINDERS_SYNC_ENABLED="false"

# 提醒事项同步间隔 (秒)
REMINDERS_SYNC_INTERVAL="600"

# 是否启用通讯录集成
CONTACTS_INTEGRATION_ENABLED="false"

# 是否启用系统通知
NOTIFICATIONS_ENABLED="true"

# ================================
# AI 功能配置
# ================================
# 是否启用 AI 功能
AI_FEATURES_ENABLED="true"

# AI 优先级计算权重
AI_PRIORITY_WEIGHT="0.7"

# AI 复杂度评估阈值
AI_COMPLEXITY_THRESHOLD="0.5"

# AI 模型更新间隔 (秒)
AI_MODEL_UPDATE_INTERVAL="3600"

# ================================
# 时间管理配置
# ================================
# 默认时间块时长 (分钟)
DEFAULT_TIME_BLOCK_DURATION="240"

# 工作开始时间 (24小时制)
WORK_START_HOUR="9"

# 工作结束时间 (24小时制)
WORK_END_HOUR="17"

# 默认休息时间 (分钟)
DEFAULT_BREAK_DURATION="15"

# 时区设置
TIMEZONE="Asia/Shanghai"

# ================================
# 数据存储配置
# ================================
# 数据目录路径
DATA_DIR="./data"

# 日志目录路径
LOGS_DIR="./data/logs"

# 导出目录路径
EXPORTS_DIR="./data/exports"

# 备份目录路径
BACKUPS_DIR="./data/backups"

# 最大日志文件大小 (MB)
MAX_LOG_FILE_SIZE="100"

# 日志保留天数
LOG_RETENTION_DAYS="30"

# ================================
# 安全配置
# ================================
# 是否启用 CORS
CORS_ENABLED="true"

# CORS 允许的源 (多个用逗号分隔)
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# 是否允许凭据
CORS_ALLOW_CREDENTIALS="true"

# API 速率限制 (每分钟请求数)
RATE_LIMIT="100"

# JWT 令牌过期时间 (分钟) - 未来功能
JWT_EXPIRE_MINUTES="30"

# ================================
# 日志配置
# ================================
# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# 日志格式 (simple, detailed, json)
LOG_FORMAT="detailed"

# 是否输出到控制台
LOG_TO_CONSOLE="true"

# 是否输出到文件
LOG_TO_FILE="true"

# 日志文件名模板
LOG_FILE_TEMPLATE="{time:YYYY-MM-DD}.log"

# ================================
# 缓存配置
# ================================
# 是否启用缓存
CACHE_ENABLED="true"

# 缓存后端 (memory, redis)
CACHE_BACKEND="memory"

# 缓存过期时间 (秒)
CACHE_EXPIRE_TIME="3600"

# Redis 连接 URL (如果使用 Redis 缓存)
# REDIS_URL="redis://localhost:6379/0"

# ================================
# 监控和健康检查
# ================================
# 健康检查间隔 (秒)
HEALTH_CHECK_INTERVAL="60"

# 性能监控是否启用
PERFORMANCE_MONITORING="true"

# 是否收集使用统计
COLLECT_USAGE_STATS="false"

# ================================
# 自动更新配置
# ================================
# 是否启用自动更新检查
AUTO_UPDATE_CHECK="true"

# 更新检查间隔 (秒)
UPDATE_CHECK_INTERVAL="86400"

# 是否自动安装更新
AUTO_INSTALL_UPDATES="false"

# 更新服务器 URL
UPDATE_SERVER_URL="https://api.lifemanagement.local/updates"

# ================================
# 备份配置
# ================================
# 是否启用自动备份
AUTO_BACKUP_ENABLED="true"

# 备份间隔 (秒)
BACKUP_INTERVAL="86400"

# 备份保留数量
BACKUP_RETENTION_COUNT="7"

# 备份压缩是否启用
BACKUP_COMPRESSION="true"

# ================================
# 第三方集成配置
# ================================
# Webhooks 端点 (可选)
# WEBHOOK_URL=""

# 外部 API 密钥 (可选)
# EXTERNAL_API_KEY=""

# Slack 集成 (可选)
# SLACK_WEBHOOK_URL=""

# ================================
# 开发和测试配置
# ================================
# 是否启用开发工具
DEV_TOOLS_ENABLED="true"

# 是否启用热重载
HOT_RELOAD="true"

# 测试数据库 URL
TEST_DATABASE_URL="sqlite:///./data/test.db"

# 是否在测试中使用内存数据库
TEST_IN_MEMORY_DB="true"

# ================================
# 性能优化配置
# ================================
# 是否启用数据库查询优化
DB_QUERY_OPTIMIZATION="true"

# API 响应缓存时间 (秒)
API_CACHE_TIME="300"

# 静态文件缓存时间 (秒)
STATIC_FILE_CACHE_TIME="3600"

# 是否启用 Gzip 压缩
GZIP_COMPRESSION="true"

# ================================
# 用户界面配置
# ================================
# 默认主题 (light, dark, auto)
DEFAULT_THEME="light"

# 默认语言
DEFAULT_LANGUAGE="zh-CN"

# 仪表板刷新间隔 (秒)
DASHBOARD_REFRESH_INTERVAL="30"

# 是否启用动画效果
ENABLE_ANIMATIONS="true"

# ================================
# 实验性功能
# ================================
# 是否启用实验性功能
EXPERIMENTAL_FEATURES="false"

# Beta 功能列表 (用逗号分隔)
# BETA_FEATURES="feature1,feature2"